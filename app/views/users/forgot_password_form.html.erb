<div class="resource-container row no-gutters">
  <div class="col-6 offset-3">
    <div class="resource-heading">
      <h2>Reset Your Password</h2>
    </div>
    <%= form_tag forgot_password_users_path, method: :post, remote: true, class: 'resource-form' do %>
      <div class="row no-gutters pt-3">
        <div class="col-4">
          <label for="email">Email</label>
        </div>
        <div class="col-6">
          <%= text_field_tag 'email', '', required: true, id: 'email', class: 'w-100' %>
        </div>
      </div>

      <div class="row no-gutters pt-3">
        <div class="col-4">
          <label for="password">New Password</label>
        </div>
        <div class="col-6">
          <%= password_field_tag 'password', '', required: true, id: 'password', class: 'w-100' %>
        </div>
      </div>

      <div class="row no-gutters pt-3">
        <div class="col-4">
          <label for="company_roc">Company ROC</label>
        </div>
        <div class="col-6">
          <%= text_field_tag 'companyroc', '', id: 'company_roc', class: 'w-100' %>
        </div>
      </div>

      <div class="row no-gutters pt-3">
        <div class="col-10 d-flex justify-content-center">
          <%= submit_tag 'Submit', data: { disable_with: "Submitting..." }, class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>